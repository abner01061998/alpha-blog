<h1 class="text-center mt-4">Available Categories</h1>

<div class="flickr_pagination mb-4">
    <%= will_paginate @categories, :container => false %>
</div>

<div class="container" id="articles-container">
<% @categories.each do |category| %>
    <div class="card shadow mb-3 bg-body rounded justify-content-md-center">
        <span class="card-header font-italic text-center">Created <%= time_ago_in_words category.created_at %> ago</span>
        <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, category, class:"text-success" %></h5>
            
            <% if logged_in?  %>
                <%= link_to 'Delete', category, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:"btn btn-outline-danger"  %>
                <%= link_to 'Edit', edit_category_path(category), class:"btn btn-outline-warning"  %>
            <% end %>
        </div>
        <div class="card-footer">
            <span class="badge bg-info">
                <%= category.articles.count %> Articles
            </span>
        </div>
    </div>
<% end %>
</div>


<div class="flickr_pagination mb-4">
    <%= will_paginate @categories, :container => false %>
</div>