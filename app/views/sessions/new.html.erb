<h3 class="text-center mt-4">Log in</h3>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with scope: :session, url: login_path ,class:"shadow-sm p-3 bg-body rounded", local: true, data: { turbo: false, turbo_method: :post } do |f| %>
                <div class="form-group row mt-3">
                    <%= f.label :email, class:"col-2 col-form-label" %>
                    <div class="col-10">
                    <%= f.email_field :email, class:"form-control shadow", placeholder:"Type your email address" %>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <%= f.label :password, class:"col-2 col-form-label" %>
                    <div class="col-10">
                    <%= f.password_field :password, class:"form-control shadow", placeholder:"Type your password" %>
                    </div>
                </div>
                <div class="form-group  text-center mt-3">
                    <%= f.submit "Log In", class: "btn btn-outline-primary" %>
                </div>
            <% end %>
            <div class="form-group  text-center mb-3">
                <%= link_to '[ Return ]', articles_path, class: "" %>
            </div>
        </div>
    </div>
</div>