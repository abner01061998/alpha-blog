<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "shared/errors", object: @user  %>
            <%= form_with model: @user,class:"shadow-sm p-3 bg-body rounded", local: true, data: { turbo: false } do |f| %>
                <div class="form-group row">
                    <%= f.label :username, class:"col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_field :username, class:"form-control shadow", placeholder:"Type a username" %>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <%= f.label :email, class:"col-2 col-form-label" %>
                    <div class="col-10">
                    <%= f.email_field :email, class:"form-control shadow", placeholder:"Type your email address" %>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <%= f.label :passowrd, class:"col-2 col-form-label" %>
                    <div class="col-10">
                    <%= f.password_field :password, class:"form-control shadow", placeholder:"Choose a password" %>
                    </div>
                </div>
                <div class="form-group  text-center mt-3">
                    <%= f.submit(@user.new_record? ? "Sing Up": "Update account" , class: "btn btn-outline-primary") %>
                </div>
            <% end %>
            <div class="form-group  text-center mb-3">
                <%= link_to '[ Return ]', users_path, class: "" %>
            </div>
        </div>
    </div>
</div>