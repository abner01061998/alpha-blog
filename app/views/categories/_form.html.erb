
<div class="container">
<div class="row justify-content-center">
    <div class="col-10">
        <%= render "shared/errors", object: @category   %>
        <%= form_with model: @category ,class:"shadow-sm p-3 bg-body rounded", local: true, data: { turbo: false } do |f| %>
            <div class="form-group row">
                <%= f.label :name, class:"col-2 col-form-label" %>
                <div class="col-10">
                    <%= f.text_field :name, class:"form-control shadow", placeholder:"Enter a name" %>
                </div>
            </div>
            <div class="form-group  text-center mt-3">
                <%= f.submit "Save", class: "btn btn-outline-primary" %>
            </div>
        <% end %>
        <div class="form-group  text-center mb-3">
            <%= link_to '[ Return ]', categories_path, class: "" %>
        </div>
    </div>
</div>
</div>