<h1 class="text-center mt-4">Bloggers</h1>
<div class="flickr_pagination mb-4">
    <%= will_paginate @users, :container => false %>
</div>
<% @users.each do |user| %>
    <div class="container" id="show-article-container">
        <div class="card shadow mb-3 bg-body rounded justify-content-md-center">
            <span class="card-header font-italic text-center"><%= link_to user.username, user %></span>
            <div class="card-body">
                <div class="card-title">
                    <%= link_to gravatar_for(user , {size:100 }), user %>
                </div>
                <div class="card- text text-center">
                    <%= pluralize(user.articles.size, "article") %>
                </div>
                <%= link_to 'View Profile', user, class:"btn btn-outline-info"  %>
                <%= link_to 'Delete', user, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:"btn btn-outline-danger"  %>
                <%= link_to 'Edit', edit_user_path(user), class:"btn btn-outline-warning"  %>
                
            </div>
            <span class="card-footer font-italic text-center">
            Created <%= time_ago_in_words user.created_at %> ago
            </span>
        </div>
    </div>
<% end %>
<div class="flickr_pagination mb-4">
    <%= will_paginate @users, :container => false %>
</div>