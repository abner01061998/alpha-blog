<%= render partial: "layouts/trashcan_button", locals: { path: articles_trash_can_path} %>
<table>
    <thead>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3">Actions</th>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.description %></td>
                <td><%= link_to 'Show', article %></td>
                <td><%= link_to 'Delete', article, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
                <td><%= link_to 'Edit', edit_article_path(article) %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= link_to 'New', new_article_path %>
<%= link_to 'Home', root_path %>